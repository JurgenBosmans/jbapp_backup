<% title("Websites") %>
<div class="container">
	<div class="row">
		<div class="col-md-9">
			<div class="row">
				<% if params[:action] == "new" then %>
					<h3 class="masthead-brand">Specialisten&nbsp&nbsp&nbsp<small>>> maak een nieuwe aan</small></h3>
				<% else %>
					<h3 class="masthead-brand">Specialisten&nbsp&nbsp&nbsp<small>>> wijzig een bestaande</small></h3>
				<% end %>
			</div>
			<!-- Dit zijn de alert messages -->
			<div class="row">
				<div class="col-md-6 col-md-offset-3"> <!-- Main -->
					<%= render 'layouts/messages' %>
				</div>
			</div>
			<div class="row input-formulier">
					<%= form_for @arts ,:html => { :class => "form-horizontal", :role => "form"} do |f| %>
						<div class="form-group">
							<%= f.label :naam, class: "col-sm-2 control-label" %>
							<div class="col-sm-5">
								<%= f.text_field :naam, :autofocus => true, class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :specialiteit, class: "col-sm-2 control-label" %>
							<div class="col-sm-5">
								<%= f.text_field :specialiteit, class: "form-control input-sm" %>
							</div>
					  	</div>
						<div class="form-group">
							<%= f.label :telefoon, class: "col-sm-2 control-label" %>
							<div class="col-sm-3">
								<%= f.text_field :telefoon, class: "form-control input-sm" %>
							</div>
					    </div>
					  	<div class="form-group">
							<%= f.label :website, class: "col-sm-2 control-label" %>
								<div class="col-sm-5">
									<%= f.url_field :website, class: "form-control input-sm" %>
						  			<span id="helpBlock" class="help-block">Vergeet de 'http://' niet.</span>
								</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :beschrijving, class: "col-sm-2 control-label" %>
							<div class="col-sm-5">
								<%= f.text_area :beschrijving, size: "24x6", class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<%= f.submit "Bevestig", class: "btn btn-primary" %>
							</div>
					  	</div>  
					<% end %>
			</div>
		</div>
		<%= render 'dossiers/menu' %>
	</div>
</div>