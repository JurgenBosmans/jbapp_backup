<%= form_for @arts ,:html => { :class => "form-horizontal", :role => "form"} do |f| %>
<% if @arts.errors.any? %>
    <div id="error_explanation">
		<h2><%= pluralize(@arts.errors.count, "error") %> waardoor de arts niet kan aangemaakt worden:</h2>

      <ul>
		  <% @arts.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
	  <%= f.label :naam, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
		<%= f.text_field :naam, :autofocus => true, class: "form-control input-sm" %>  
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :specialiteit, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
		<%= f.text_field :specialiteit, class: "form-control input-sm" %>  
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :telefoon, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
		<%= f.text_field :telefoon, class: "form-control input-sm" %>  
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :website, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
		<%= f.url_field :website, class: "form-control input-sm" %>  
      <span id="helpBlock" class="help-block">Vergeet de 'http://' niet.</span>
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :beschrijving, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
        <%= f.text_area :beschrijving, size: "24x6", class: "form-control input-sm" %>  
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Bevestig", class: "btn-sm btn-info" %>
    </div>
  </div>  
<% end %>


