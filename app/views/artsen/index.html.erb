<% title("Websites") %>
<div class="container">	<!-- container-fluid is ook mogelijk over de ganse breedte -->
	<div class="row">
		<div class="col-md-9"><!-- Main -->
			<div class="row">
				<h3 class="masthead-brand">Specialisten&nbsp&nbsp&nbsp<small>>> beheer hier alle specialisten</small></h3>
			</div>

			<!-- Dit zijn de alert messages -->
			<div class="row">
				<div class="col-md-6 col-md-offset-3"> <!-- Main -->
					<%= render 'layouts/messages' %>
				</div>
			</div>

			<!-- De tabel -->
			<div class="row">
				<table class="table table-condensed">
					<thead class="tabel-titel">
    					<tr>
      						<th>Naam</th>
							<th>Specialiteit</th>
							<th>Telefoon</th>
							<th>Website</th>
							<th>Beschrijving</th>
      						<th></th>
      						<th></th>
    					</tr>
  					</thead>
  					<tbody>
	  					<% @artsen.each do |arts| %>
      						<tr>
		  						<td width="10%"><%= arts.naam %></td>
		  						<td width="10%"><%= arts.specialiteit %></td>
		  						<td width="10%"><%= arts.telefoon %></td>
		  						<td width="10%"><%= arts.website %></td>
		  						<td width="40%"><%= arts.beschrijving %></td>
		  						<td width="5%">
									<div class="btn-group">
			  							<%= link_to  edit_arts_path(arts) do %>
                    						<span class="glyphicon glyphicon-edit" title="Wijzig deze arts"></span>
                						<% end %>
            						</div>
								</td>
            					<td width="5%">
									<div class="btn-group">
										<%= link_to  arts, method: :delete, data: { confirm: 'Bent u zeker?' } do %>
                    						<span class="glyphicon glyphicon-trash" title="Verwijder deze arts"></span>
                						<% end %>
            						</div>
								</td>
      						</tr>
    					<% end %>
  					</tbody>
				</table>
			</div>
		</div>

		<!-- Menu -->
		<%= render 'dossiers/menu' %>
	</div>
</div>