<div class="container">  
	<div class="row row-offcanvas row-offcanvas-right">
		<div class="col-xs-12 col-sm-8">
          	<p class="pull-right visible-xs">
            	<button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
          	</p>
			<h3 class="masthead-brand">Artsen & geneesheren.&nbsp&nbsp <small>Beheer hier.</small></h3>
			<div class="row">
				<%= render 'layouts/messages' %> 
				<table class="table">
					<thead>
    					<tr>
      						<th>Naam</th>
							<th>Specialiteit</th>
							<th>Telefoon</th>
							<th>Website</th>
							<th>Beschrijving</th>
      						<th></th>
      						<th></th>
    					</tr>
  					</thead>
  					<tbody>
	  					<% @artsen.each do |arts| %>
      						<tr>
		  						<td width="10%"><%= arts.naam %></td>
		  						<td width="10%"><%= arts.specialiteit %></td>
		  						<td width="10%"><%= arts.telefoon %></td>
		  						<td width="10%"><%= arts.website %></td>
		  						<td width="40%"><%= arts.beschrijving %></td>
		  						<td width="5%">
									<div class="btn-group">
			  							<%= link_to  edit_arts_path(arts), :class => "btn-sm btn-primary" do %>
                    						<span class="glyphicon glyphicon-edit" title="Wijzig deze arts"></span>
                						<% end %>	
            						</div>
								</td>
            					<td width="5%">
									<div class="btn-group">
										<%= link_to  arts, method: :delete, data: { confirm: 'Bent u zeker?' }, :class => "btn-sm btn-primary" do %>
                    						<span class="glyphicon glyphicon-remove-sign" title="Verwijder deze arts"></span>
                						<% end %>
            						</div>
								</td> 
      						</tr>
    					<% end %>
  					</tbody>
				</table>
			</div>
		</div>     
		<%= render 'dossiers/menu' %> 
	</div>  
</div>