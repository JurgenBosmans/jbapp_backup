<div class="container">
	<div class="row row-offcanvas row-offcanvas-right">
		<div class="col-xs-12 col-sm-8">
          	<p class="pull-right visible-xs">
            	<button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
          	</p>
			<% if params[:action] == "new" then %>
				<h3 class="masthead-brand">Categorie.&nbsp&nbsp <small>Geef een nieuwe categorie in.</small></h3>
			<% else %>
				<h3 class="masthead-brand">Categorie.&nbsp&nbsp <small>Wijzig een bestaande categorie.</small></h3>
			<% end %>
			<div class="row">
				<div class="invulformulier">
					<%= form_for @categorie ,:html => { :class => "form-horizontal", :role => "form"} do |f| %>
					  <% if @categorie.errors.any? %>
						<div id="error_explanation">
						  <h2><%= pluralize(@categorie.errors.count, "error") %> prohibited this categorie from being saved:</h2>

						  <ul>
						  <% @categorie.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						  <% end %>
						  </ul>
						</div>
					  <% end %>

					  <div class="form-group">
						  <%= f.label :omschrijving,"Omschrijf hier uw categorie", class: "col-sm-2 control-label" %>
						<div class="col-sm-5">
							<%= f.text_field :omschrijving, :autofocus => true, class: "form-control input-sm" %>  
						</div>
					  </div>

					  <div class="form-group">
						<div class="col-sm-offset-2 col-sm-10">
							<%= f.submit "Bevestig", class: "btn btn-primary" %>
						</div>
					  </div>  
					<% end %>
				</div>
			</div>
		</div>
		<%= render 'websites/menu' %>
	</div>
</div>


