<div class="container">
	<div class="row row-offcanvas row-offcanvas-right">
		<div class="col-xs-12 col-sm-8">
          	<p class="pull-right visible-xs">
            	<button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
          	</p>
			<h3 class="masthead-brand">Categorie.&nbsp&nbsp <small>Een overzicht van alle categorieÃ«n.</small></h3>
			<div class="row">
				<%= render 'layouts/messages' %>
				<table class="table">
					<% @categories.each do |categorie| %>
						<tr>
							<td width="20%"><%= categorie.omschrijving %></td>
						  	<td width="5%">
								<div class="btn-group">
									<%= link_to  edit_categorie_path(categorie), :class => "btn-sm btn-primary" do %>
										<span class="glyphicon glyphicon-edit" title="Wijzig deze categorie"></span>
									<% end %>
								</div>
							</td>
							<td width="5%">
								<div class="btn-group">
									<%= link_to  categorie, method: :delete, data: { confirm: 'Bent u zeker?' }, :class => "btn-sm btn-primary" do %>
										<span class="glyphicon glyphicon-trash" title="Verwijder deze categorie"></span>
									<% end %>
								</div>
							</td>
						  <td width="70%"></td>
					  </tr>
					<% end %>
				</table>
			</div>
		</div>
		<%= render 'websites/menu' %>
	</div>
</div>
