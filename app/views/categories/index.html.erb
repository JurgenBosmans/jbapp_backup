<table>
  <thead>
    <tr>
      <th>Omschrijving</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |categorie| %>
      <tr>
        <td><%= categorie.omschrijving %></td>
        <td><%= link_to 'Show', categorie %></td>
