<% title("Soort prestatie") %>
<div class="container">
	<div class="row">
		<div class="col-md-9">
			<div class="row">
				<% if params[:action] == "new" then %>
					<h3 class="masthead-brand">Soort prestatie&nbsp&nbsp&nbsp<small>>> maak een nieuwe aan</small></h3>
				<% else %>
					<h3 class="masthead-brand">Soort prestatie&nbsp&nbsp&nbsp<small>>> wijzig een bestaande</small></h3>
				<% end %>
			</div>
			<!-- Dit zijn de alert messages -->
			<div class="row">
				<div class="col-md-6 col-md-offset-3"> <!-- Main -->
					<%= render 'layouts/messages' %>
				</div>
			</div>
			<div class="row input-formulier">
					<%= form_for @soort_prestatie ,:html => { :class => "form-horizontal", :role => "form"} do |f| %>
						<div class="form-group">
							<%= f.label :soort, class: "col-sm-2 control-label" %>
							<div class="col-sm-5">
								<%= f.text_field :soort, :autofocus => true, class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :soort_detail, "Onderverdeling" , class: "col-sm-2 control-label" %>
							<div class="col-sm-5">
								<%= f.text_field :soort_detail, class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<%= f.submit "Bevestig", class: "btn btn-primary" %>
							</div>
					  	</div>
					<% end %>
			</div>
		</div>
		<%= render 'prestaties/menu' %>
	</div>
</div>




