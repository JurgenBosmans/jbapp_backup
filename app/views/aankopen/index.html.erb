<div class="container">  
	<div class="row row-offcanvas row-offcanvas-right">
		<div class="col-xs-12 col-sm-8">
          	<p class="pull-right visible-xs">
            	<button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
          	</p>
			<h3 class="masthead-brand">Aankopen.&nbsp&nbsp <small>Beheer je aankopen.</small></h3>
			<div class="row">
				<%= render 'layouts/messages' %> 
				<table class="table">
  					<thead>
    					<tr>
      						<th>Datum</th>
      						<th>Soort</th>
      						<th>Winkel</th>
      						<th>Artikel</th>
	  						<th>Prijs</th>
							<th>Garantie</th>
      						<th></th>
      						<th></th>
    					</tr>
  					</thead>
					<tbody>
	  					<% @aankopen.each do |aankoop| %>
      						<tr>
		  						<td><%= aankoop.aankoopdatum.strftime("%d/%m/%Y") %></td>
		  						<td><%= aankoop.soort %></td>
		  						<td><%= aankoop.winkel %></td>
		  						<td><%= aankoop.artikel %></td>
		  						<td align="right"><%= number_to_currency(aankoop.prijs, locale: :nl) %></td>
		  						<td align="right"><%= aankoop.garantie_maanden %></td>
								<td width=50px>
									<div class="btn-group">
										<%= link_to  edit_aankoop_path(aankoop), :class => "btn-sm btn-primary" do %>
            								<span class="glyphicon glyphicon-edit" title="Wijzig deze aankoop"></span>
            							<% end %>
									</div>
								</td>
        						<td width=50px>
									<div class="btn-group">
										<%= link_to  aankoop, method: :delete, data: { confirm: 'Bent u zeker?' }, :class => "btn-sm btn-primary" do %>
            								<span class="glyphicon glyphicon-remove-sign" title="Verwijder deze aankoop"></span>
            							<% end %>
									</div>
								</td>  		
    						</tr>
    					<% end %>
  					</tbody>					
				</table>
			</div>
		</div>     
		<%= render 'aankopen/menu' %> 
	</div>  
</div>
