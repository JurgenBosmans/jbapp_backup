<% title("Onderhouden") %>
<div class="container">	<!-- container-fluid is ook mogelijk over de ganse breedte -->
	<div class="row">
		<div class="col-md-9"><!-- Main -->
			<div class="row">
				<h3 class="masthead-brand">Onderhoud&nbsp&nbsp&nbsp<small>>> beheer je onderhoud</small></h3>
			</div>

			<!-- Dit zijn de alert messages -->
			<div class="row">
				<div class="col-md-6 col-md-offset-3"> <!-- Main -->
					<%= render 'layouts/messages' %>
				</div>
			</div>

			<!-- De tabel -->
			<div class="row">
				<table class="table table-condensed">
					<thead>
						<tr>
					  		<th>Datum</th>
					  		<th>Artikel</th>
							<th>Prijs</th>
					  		<th>Datum<br>volgende</th>
					  		<th>Huidige<br>tellerstand</th>
					  		<th></th>
					  		<th></th>
						</tr>
				  	</thead>
				  	<tbody>
						<% @onderhouden.each do |onderhoud| %>
					  		<tr>
						  		<td><%= onderhoud.datum_onderhoud.strftime("%d/%m/%Y") %></td>
						  		<td><%= onderhoud.aankoop.artikel %></td>
						  		<td width=100px align="right"><%= number_to_currency(onderhoud.prijs) %></td>
						  		<td><%= onderhoud.volgende_onderhoud.try(:strftime, "%d/%m/%Y") %></td>
						  		<td width=75px align="right"><%= onderhoud.teller %> <%= onderhoud.teller_eh %></td>
								<td width=50px>
									<div class="btn-group">
										<%= link_to  edit_onderhoud_path(onderhoud) do %>
											<span class="glyphicon glyphicon-edit" title="Wijzig dit onderhoud"></span>
										<% end %>
									</div>
								</td>
								<td width=50px>
									<div class="btn-group">
										<%= link_to  onderhoud, method: :delete, data: { confirm: 'Bent u zeker?' } do %>
											<span class="glyphicon glyphicon-trash" title="Verwijder dit onderhoud"></span>
										<% end %>
									</div>
								</td>
							</tr>
						<% end %>
				  	</tbody>
				</table>
			</div>
		</div>

		<!-- Menu -->
		<%= render 'onderhouden/menu' %>
	</div>
</div>



