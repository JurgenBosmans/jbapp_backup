<%= form_for @onderhoud ,:html => { :class => "form-horizontal", :role => "form"} do |f| %>
  <div class="form-group">
	  <%= f.label 'Artikel' , class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
		<%= f.collection_select(:aankoop_id, Aankoop.reorder("artikel ASC"), :id, :artikel, {:include_blank => true}, { class: "form-control input-sm"}) %>
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :datum_onderhoud, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
		<%= f.date_select(:datum_onderhoud, {class: "date-select"}) %>  
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :volgende_onderhoud, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
		<%= f.date_select(:volgende_onderhoud, {:include_blank => true}, {class: "date-select"}) %>  
    </div>
  </div>

  <div class="form-group">
	<%= f.label 'Kost' , class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
		<%= f.number_field :prijs, :placeholder => "0", class: "form-control input-sm" %>
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :opmerking, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
		<%= f.text_area :opmerking, size: "24x6", :autofocus => true, class: "form-control input-sm" %>  
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :teller ,"Tellerstand", class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
		<%= f.number_field :teller , class: "form-control input-sm" %>  
    </div>
  </div>

<div class="form-group">
	<%= f.label  :teller_eh , "EÃ©nheid teller" ,class: "col-sm-2 control-label" %>   
    <div class="col-sm-2">
		<%= f.select(:teller_eh, Onderhoud::EH, {:include_blank => true}, {class: "form-control input-sm"}) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
		<%= f.submit "Bevestig", class: "btn-sm btn-info" %>
    </div>
  </div>  

<% end %>
