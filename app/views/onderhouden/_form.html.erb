<% title("Onderhouden") %>
<div class="container">
	<div class="row">
		<div class="col-md-9">
			<div class="row">
				<% if params[:action] == "new" then %>
					<h3 class="masthead-brand">Onderhoud&nbsp&nbsp&nbsp<small>>> geef een nieuw onderhoud in</small></h3>
				<% else %>
					<h3 class="masthead-brand">Websites&nbsp&nbsp&nbsp<small>>> wijzig een bestaand onderhoud</small></h3>
				<% end %>
			</div>
			<!-- Dit zijn de alert messages -->
			<div class="row">
				<div class="col-md-6 col-md-offset-3"> <!-- Main -->
					<%= render 'layouts/messages' %>
				</div>
			</div>
			<div class="row input-formulier">
					<%= form_for @onderhoud ,:html => { :class => "form-horizontal", :role => "form"} do |f| %>
						<div class="form-group">
							<%= f.label :aankoop_id, 'Artikel' , class: "col-sm-2 control-label" %>
							<div class="col-sm-4">
						  		<%= f.collection_select(:aankoop_id, current_user.aankopen.reorder("artikel ASC"), :id, :artikel, {:include_blank => true}, { class: "form-control input-sm"}) %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :datum_onderhoud, class: "col-sm-2 control-label" %>
							<div class="col-sm-4">
								<%= f.date_select(:datum_onderhoud, {class: "date-select"}) %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :volgende_onderhoud, class: "col-sm-2 control-label" %>
							<div class="col-sm-4">
								<%= f.date_select(:volgende_onderhoud, {:include_blank => true}, {class: "date-select"}) %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :prijs, 'Kost' , class: "col-sm-2 control-label" %>
							<div class="col-sm-2">
						  		<%= f.text_field :prijs, :placeholder => "0", class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :opmerking, class: "col-sm-2 control-label" %>
							<div class="col-sm-6">
								<%= f.text_area :opmerking,:autofocus => true, class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :teller ,"Tellerstand", class: "col-sm-2 control-label" %>
							<div class="col-sm-2">
						  		<%= f.text_field :teller , class: "form-control input-sm" %>
							</div>
					  	</div>
						<div class="form-group">
							<%= f.label  :teller_eh , "EÃ©nheid teller" ,class: "col-sm-2 control-label" %>
							<div class="col-sm-2">
								<%= f.select(:teller_eh, Onderhoud::EH, {:include_blank => true}, {class: "form-control input-sm"}) %>
							</div>
					  	</div>
					  	<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<%= f.submit "Bevestig", class: "btn btn-primary" %>
							</div>
					  	</div>
					<% end %>
			</div>
		</div>
		<%= render 'onderhouden/menu' %>
	</div>
</div>


