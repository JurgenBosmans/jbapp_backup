<% title("Producten") %>
<div class="container">	<!-- container-fluid is ook mogelijk over de ganse breedte -->
	<div class="row">
		<div class="col-md-9"><!-- Main -->
			<div class="row">
				<h3 class="masthead-brand">Producten&nbsp&nbsp&nbsp<small>>> lijst met producten / ingrediÃ«nten</small></h3>
			</div>

			<!-- Dit zijn de alert messages -->
			<div class="row">
				<div class="col-md-6 col-md-offset-3"> <!-- Main -->
					<%= render 'layouts/messages' %>
				</div>
			</div>

			<!-- De tabel -->
			<div class="row">
				<table class="table table-condensed">
					<thead>
						<tr>
							<th>Naam</th>
							<th>Soort</th>
							<th style="text-align: right">Score</th>
							<th>Land</th>
							<th>Winkel</th>
							<th style="text-align: right">Prijs</th>
							<th></th>
							<th></th>
						</tr>
				  	</thead>
				  	<tbody>
						<% @producten.each do |product| %>
					  	<tr>
							<td><%= product.naam %></td>
						  	<td><%= product.soort %></td>
						  	<td align="right"><%= product.score %></td>
						  	<td><%= product.land %></td>
						  	<td><%= product.winkel %></td>
						  	<td style="text-align: right"><%= product.prijs %>&nbsp<%= product.eenheid %></td>
						  	<td align="center">
								<div class="btn-group">
									<%= link_to  edit_product_path(product) do %>
										<span class="glyphicon glyphicon-edit" title="Wijzig dit product"></span>
									<% end %>
								</div>
							</td>
							<td align="center">
								<div class="btn-group">
									<%= link_to  product, method: :delete, data: { confirm: 'Bent u zeker?' } do %>
										<span class="glyphicon glyphicon-trash" title="Verwijder dit product"></span>
									<% end %>
								</div>
							</td>
					  	</tr>
					<% end %>
				  </tbody>
				</table>
			</div>
		</div>

		<!-- Menu -->
		<%= render 'recepten/menu' %>
	</div>
</div>


