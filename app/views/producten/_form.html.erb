<div class="container">
	<div class="row row-offcanvas row-offcanvas-right">
		<div class="col-xs-12 col-sm-8">
          	<p class="pull-right visible-xs">
            	<button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
          	</p>
			<% if params[:action] == "new" then %>
				<h3 class="masthead-brand">Product.&nbsp&nbsp <small>Maak een nieuwe product aan.</small></h3>
			<% else %>
				<h3 class="masthead-brand">Product.&nbsp&nbsp <small>Wijzig een bestaand product.</small></h3>
			<% end %>
			<div class="row">
				<div class="invulformulier">
					<%= form_for @product ,:html => { :class => "form-horizontal", :role => "form"} do |f| %>
						<div class="form-group">
							<%= f.label :naam, class: "col-sm-2 control-label" %>
							<div class="col-sm-5">
								<%= f.text_field :naam, :autofocus => true, class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :soort, class: "col-sm-2 control-label" %>
							<div class="col-sm-2">
								<%= f.select(:soort, Product::SOORT, {:include_blank => true}, {class: "form-control input-sm"}) %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :seizoen, class: "col-sm-2 control-label" %>
							<div class="col-sm-2">
								<%= f.text_field :seizoen, class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :score ,"Score", class: "col-sm-2 control-label" %>
							<div class="col-sm-1">
						  		<%= f.text_field :score , class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :land, class: "col-sm-2 control-label" %>
							<div class="col-sm-3">
								<%= f.text_field :land, class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :winkel, class: "col-sm-2 control-label" %>
							<div class="col-sm-3">
								<%= f.text_field :winkel, class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :prijs , class: "col-sm-2 control-label" %>
							<div class="col-sm-2">
						  		<%= f.text_field :prijs, class: "form-control input-sm" %>
							</div>
					  	</div>
						<div class="form-group">
							<%= f.label  :eenheid , "EÃ©nheid" ,class: "col-sm-2 control-label" %>
							<div class="col-sm-2">
								<%= f.select(:eenheid, Product::EH, {:include_blank => true}, {class: "form-control input-sm"}) %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :opmerking, class: "col-sm-2 control-label" %>
							<div class="col-sm-5">
								<%= f.text_area :opmerking, size: "24x6", class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<%= f.submit "Bevestig", class: "btn btn-primary" %>
							</div>
					  	</div>
					<% end %>
				</div>
			</div>
		</div>
		<%= render 'recepten/menu' %>
	</div>
</div>





