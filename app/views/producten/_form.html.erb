<%= form_for @product ,:html => { :class => "form-horizontal", :role => "form"} do |f| %>
<% if @product.errors.any? %>
    <div id="error_explanation">
		<h2><%= pluralize(@product.errors.count, "error") %> waardoor het product niet kan aangemaakt worden:</h2>
      <ul>
		  <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
	  <%= f.label :naam, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
		<%= f.text_field :naam, :autofocus => true, class: "form-control input-sm" %>  
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :soort, class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
		<%= f.select(:soort, Product::SOORT, {:include_blank => true}, {class: "form-control input-sm"}) %>
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :seizoen, class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
		<%= f.text_field :seizoen, class: "form-control input-sm" %>  
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :score ,"Score", class: "col-sm-2 control-label" %>
    <div class="col-sm-1">
		<%= f.number_field :score , class: "form-control input-sm" %>  
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :land, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
		<%= f.text_field :land, class: "form-control input-sm" %>  
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :winkel, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
		<%= f.text_field :winkel, class: "form-control input-sm" %>  
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :prijs , class: "col-sm-2 control-label" %>
    <div class="col-sm-1">
		<%= f.number_field :prijs, class: "form-control input-sm" %>  
    </div>
  </div>

<div class="form-group">
	<%= f.label  :eenheid , "EÃ©nheid" ,class: "col-sm-2 control-label" %>   
    <div class="col-sm-2">
		<%= f.select(:eenheid, Product::EH, {:include_blank => true}, {class: "form-control input-sm"}) %>
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :opmerking, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
		<%= f.text_area :opmerking, size: "24x6", class: "form-control input-sm" %>  
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Bevestig", class: "btn-sm btn-info" %>
    </div>
  </div>  
<% end %>


