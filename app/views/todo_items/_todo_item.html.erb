<div class="row clearfix">
  <% if todo_item.afgewerkt? %>
		<div class="complete">
      <%= link_to afgewerkt_todo_todo_item_path(@todo, todo_item.id), method: :patch do %>
				<i style="opacity: 0.4;" class="fa fa-check"></i>
			<% end %>
		</div>
		<div class="todo_item">
      <p style="opacity: 0.4;"><strike><%= todo_item.item %></strike></p>
		</div>
		<div class="trash">
      <%= link_to todo_todo_item_path(@todo, todo_item.id), method: :delete, data: { confirm: "Zeker?" } do %>
				<i class="fa fa-trash"></i>
			<% end %>
		</div>
	<% else %>
		<div class="complete">
      <%= link_to afgewerkt_todo_todo_item_path(@todo, todo_item.id), method: :patch do %>
				<i class="fa fa-check"></i>
			<% end %>
		</div>
		<div class="todo_item">
      <p><%= todo_item.item %></p>
		</div>
		<div class="trash">
      <%= link_to todo_todo_item_path(@todo, todo_item.id), method: :delete, data: { confirm: "Zeker?" } do %>
				<i class="fa fa-trash"></i>
			<% end %>
		</div>
	<% end %>
</div>