<br>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Culinaire tips</h3>
  </div>
  <div class="panel-body">
    </div>
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Datum</th>
		<th>Tip</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
	  <% @tips.each do |tip| %>
      <tr>
		  <td width="20%"><%= tip.created_at.strftime("%d/%m/%Y") %></td>
		  <td width="20%"><%= tip.tip %></td>
		  <td width="5%"><div class="btn-group">
			  <%= link_to  edit_tip_path(tip), :class => "btn-xs btn-info" do %>
                    	<span class="glyphicon glyphicon-edit" title="Wijzig deze tip"></span>
                	<% end %>
            	</div></td>
            	<td width="5%"><div class="btn-group">
					<%= link_to  tip, method: :delete, data: { confirm: 'Bent u zeker?' }, :class => "btn-xs btn-info" do %>
                    	<span class="glyphicon glyphicon-remove-sign" title="Verwijder deze tip"></span>
                	<% end %>
            	</div></td> 
      </tr>
	  
    <% end %>
  </tbody>
</table>

<br>

	  <p align="center"><%= link_to 'Toevoegen', new_tip_path, {class: "btn btn-sm btn-info"} %></p>
  </div>
</div>


