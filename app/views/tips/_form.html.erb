<% title("Tips") %>
<div class="container">
	<div class="row">
		<div class="col-md-9">
			<div class="row">
				<% if params[:action] == "new" then %>
					<h3 class="masthead-brand">Tips&nbsp&nbsp&nbsp<small>>> geef een nieuwe culinaire tip in</small></h3>
				<% else %>
					<h3 class="masthead-brand">Tips&nbsp&nbsp&nbsp<small>>> wijzig een bestaande tip</small></h3>
				<% end %>
			</div>
			<!-- Dit zijn de alert messages -->
			<div class="row">
				<div class="col-md-6 col-md-offset-3"> <!-- Main -->
					<%= render 'layouts/messages' %>
				</div>
			</div>
			<div class="row input-formulier">
					<%= form_for @tip ,:html => { :class => "form-horizontal", :role => "form"} do |f| %>
						<div class="form-group">
							<%= f.label :tip, class: "col-sm-2 control-label" %>
							<div class="col-sm-8">
								<%= f.text_area :tip, size: "48x16",  :autofocus => true, class: "form-control input-sm" %>
					  		</div>
						</div>
					  	<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<%= f.submit "Bevestig", class: "btn btn-primary" %>
							</div>
					  	</div>
					<% end %>
			</div>
		</div>
		<%= render 'recepten/menu' %>
	</div>
</div>




