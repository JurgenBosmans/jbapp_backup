<% title("Beoordeling") %>
<div class="container">
	<div class="row">
		<div class="col-md-9">
			<div class="row">
				<% if params[:action] == "new" then %>
					<h3 class="masthead-brand">Beoordeling&nbsp&nbsp&nbsp<small>>>geef een beoordeling voor een recept</small></h3>
				<% else %>
					<h3 class="masthead-brand">Beoordeling&nbsp&nbsp&nbsp<small>>> wijzig een bestaande beoordeling</small></h3>
				<% end %>
			</div>
			<!-- Dit zijn de alert messages -->
			<div class="row">
				<div class="col-md-6 col-md-offset-3"> <!-- Main -->
					<%= render 'layouts/messages' %>
				</div>
			</div>
			<div class="row input-formulier">
					<%= form_for @bereiding ,:html => { :class => "form-horizontal", :role => "form"} do |f| %>
						<div class="form-group">
							<%= f.label :recept_id, "Recept" , class: "col-sm-2 control-label" %>
							<div class="col-sm-8">
						  		<%= f.collection_select(:recept_id, current_user.recepten.reorder("naam ASC"), :id, :naam, {:include_blank => true}, { class: "form-control input-sm"}) %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :datum, class: "col-sm-2 control-label" %>
							<div class="col-sm-3">
								<%= f.date_select(:datum, {class: "date-select"}) %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :opmerking, class: "col-sm-2 control-label" %>
							<div class="col-sm-7">
								<%= f.text_area :opmerking, size: "24x6", :autofocus => true, class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :score ,"Score", class: "col-sm-2 control-label" %>
							<div class="col-sm-1">
						  		<%= f.text_field :score , class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<%= f.submit "Bevestig", class: "btn btn-primary" %>
							</div>
					  	</div>
					<% end %>
			</div>
		</div>
		<%= render 'recepten/menu' %>
	</div>
</div>
