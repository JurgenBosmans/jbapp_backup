<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Personen (gebruikt bij zowel patiÃ«nten als bij kind)</h3>
  </div>
  <div class="panel-body">
    </div>
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Voornaam</th>
		<th>Naam</th>
		<th>Geboortedatum</th>
		<th>Geslacht</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
	  <% @personen.each do |persoon| %>
      <tr>
		  <td width="20%"><%= persoon.voornaam %></td>
		  <td width="20%"><%= persoon.naam %></td>
		  <td width="20%"><%= persoon.geboortedatum.strftime("%d/%m/%Y") %></td>
		  <td width="20%"><%= persoon.soort %></td>
		  <td width="5%"><div class="btn-group">
			  <%= link_to  edit_persoon_path(persoon), :class => "btn-xs btn-info" do %>
                    	<span class="glyphicon glyphicon-edit" title="Wijzig deze persoon"></span>
                	<% end %>
            	</div></td>
            	<td width="5%"><div class="btn-group">
					<%= link_to  persoon, method: :delete, data: { confirm: 'Bent u zeker?' }, :class => "btn-xs btn-info" do %>
                    	<span class="glyphicon glyphicon-remove-sign" title="Verwijder deze persoon"></span>
                	<% end %>
            	</div></td> 
      </tr>
	  
    <% end %>
  </tbody>
</table>

<br>

	  <p align="center"><%= link_to 'Toevoegen', new_persoon_path, {class: "btn btn-sm btn-info"} %></p>
  </div>
</div>
