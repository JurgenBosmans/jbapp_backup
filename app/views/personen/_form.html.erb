<% title("Personen") %>
<div class="container">
	<div class="row">
		<div class="col-md-9">
			<div class="row">
				<% if params[:action] == "new" then %>
					<h3 class="masthead-brand">Personen&nbsp&nbsp&nbsp<small>>> maak een nieuwe persoon aan</small></h3>
				<% else %>
					<h3 class="masthead-brand">Personen&nbsp&nbsp&nbsp<small>>> wijzig een persoon</small></h3>
				<% end %>
			</div>
			<!-- Dit zijn de alert messages -->
			<div class="row">
				<div class="col-md-6 col-md-offset-3"> <!-- Main -->
					<%= render 'layouts/messages' %>
				</div>
			</div>
			<div class="row input-formulier">
					<%= form_for @persoon ,:html => { :class => "form-horizontal", :role => "form"} do |f| %>
						<div class="form-group">
							<%= f.label :voornaam, class: "col-sm-2 control-label" %>
							<div class="col-sm-5">
								<%= f.text_field :voornaam, :autofocus => true, class: "form-control input-sm" %>
							</div>
					  	</div>
					    <div class="form-group">
							<%= f.label :naam, class: "col-sm-2 control-label" %>
							<div class="col-sm-5">
								<%= f.text_field :naam, class: "form-control input-sm" %>
							</div>
					  	</div>
					    <div class="form-group">
							<%= f.label :geboortedatum, class: "col-sm-2 control-label" %>
							<div class="col-sm-4">
								<%= f.date_select(:geboortedatum, {:start_year=>1920, :end_year=>Date.current.year}, {class: "date-select"}) %>
							</div>
					  	</div>
						<div class="form-group">
							<%= f.label  :soort , "Soort" ,class: "col-sm-2 control-label" %>
							<div class="col-sm-2">
								<%= f.select(:soort, Persoon::SOORT, {:include_blank => true}, {class: "form-control input-sm"}) %>
							</div>
					  	</div>
					  	<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<%= f.submit "Bevestig", class: "btn btn-primary" %>
							</div>
					  	</div>
					<% end %>
			</div>
		</div>
		<% if params[:filter] == "prestatie" then %>
			<%= render 'prestaties/menu' %>
		<% else %>
			<%= render 'dossiers/menu' %>
		<% end %>
	</div>
</div>
