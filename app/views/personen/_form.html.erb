<%= form_for @persoon ,:html => { :class => "form-horizontal", :role => "form"} do |f| %>
<% if @persoon.errors.any? %>
    <div id="error_explanation">
		<h2><%= pluralize(@persoon.errors.count, "error") %> waardoor de persoon niet kan aangemaakt worden:</h2>

      <ul>
		  <% @persoon.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
	  <%= f.label :voornaam, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
		<%= f.text_field :voornaam, :autofocus => true, class: "form-control input-sm" %>  
    </div>
  </div>
  <div class="form-group">
	  <%= f.label :naam, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
		<%= f.text_field :naam, class: "form-control input-sm" %>  
    </div>
  </div>
  <div class="form-group">
	  <%= f.label :geboortedatum, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
		<%= f.date_select(:geboortedatum, {:start_year=>1920, :end_year=>Date.current.year}, {class: "date-select"}) %>  
		
    </div>
  </div>
<div class="form-group">
	<%= f.label  :soort , "Soort" ,class: "col-sm-2 control-label" %>   
    <div class="col-sm-2">
		<%= f.select(:soort, Persoon::SOORT, {:include_blank => true}, {class: "form-control input-sm"}) %>

    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Bevestig", class: "btn-sm btn-info" %>
    </div>
  </div>  
<% end %>
