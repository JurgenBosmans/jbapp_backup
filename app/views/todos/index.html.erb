<div class="container">
	<div class="row row-offcanvas row-offcanvas-right">
		<div class="col-xs-12 col-sm-8">
          	<p class="pull-right visible-xs">
            	<button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
          	</p>
			<h3 class="masthead-brand">Todo lijstjes.&nbsp&nbsp <small>Beheer hier je todos.</small></h3>
			<div class="row">
				<%= render 'layouts/messages' %>
					<% @todos.each do |todo| %>
					  <div class="index_row clearfix">
						<h2 class="todo_list_title"><%= link_to todo.naam, todo %></h2>
						<p class="todo_list_sub_title"><%= todo.beschrijving %></p>
					  </div>
					<% end %>
			</div>
		</div>
			<%= render 'todos/menu' %>
	</div>
</div>
