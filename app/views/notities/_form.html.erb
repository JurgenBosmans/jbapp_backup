<%= form_for @notitie ,:html => { :class => "form-horizontal", :role => "form"} do |f| %>
  <div class="form-group">
      <%= f.label :notitie,"Schrijf hier uw tekst", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
        <%= f.text_area :notitie, size: "48x24", :autofocus => true, class: "form-control input-sm" %>  
    </div>
  </div>
    
  <div class="form-group">
      <%= f.label  :belangrijk, "Belangrijk" , class: "col-sm-2 control-label" %>   
    <div class="col-sm-5">
        <%= f.check_box :belangrijk,  class: "form-control input-sm" %>  
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Bevestig", class: "btn-sm btn-info" %>
    </div>
  </div>  
<% end %>
