<div class="container">  
	<div class="row row-offcanvas row-offcanvas-right">
		<div class="col-xs-12 col-sm-8">
          	<p class="pull-right visible-xs">
            	<button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
          	</p>
			<% if params[:action] == "new" then %>  
				<h3 class="masthead-brand">Notities.&nbsp&nbsp <small>Maak een nieuwe notitie aan.</small></h3>
			<% else %>
				<h3 class="masthead-brand">Notities.&nbsp&nbsp <small>Wijzig een bestaande notitie.</small></h3>
			<% end %>
			<div class="row">
				<div class="invulformulier">
					<%= form_for @notitie ,:html => { :class => "form-horizontal", :role => "form"} do |f| %>
					  <div class="form-group">
						  <%= f.label :notitie,"Schrijf hier uw tekst", class: "col-sm-2 control-label" %>
						<div class="col-sm-8">
							<%= f.text_area :notitie, size: "48x24", :autofocus => true, class: "form-control input-sm" %>  
						</div>
					  </div>

					  <div class="form-group">
						  <%= f.label  :belangrijk, "Belangrijk" , class: "col-sm-2 control-label" %>   
						<div class="col-sm-5">
							<%= f.check_box :belangrijk,  class: "form-control input-sm" %>  
						</div>
					  </div>

					  <div class="form-group">
						<div class="col-sm-offset-2 col-sm-10">
							<%= f.submit "Bevestig", class: "btn btn-primary" %>
						</div>
					  </div>  
					<% end %>					
				</div>
			</div>
		</div>     
		<%= render 'notities/menu' %> 
	</div>  
</div>
