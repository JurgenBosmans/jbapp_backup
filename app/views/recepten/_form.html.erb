<div class="container">
	<div class="row row-offcanvas row-offcanvas-right">
		<div class="col-xs-12 col-sm-8">
          	<p class="pull-right visible-xs">
            	<button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
          	</p>
			<% if params[:action] == "new" then %>
				<h3 class="masthead-brand">Recept.&nbsp&nbsp <small>Maak een nieuwe recept aan.</small></h3>
			<% else %>
				<h3 class="masthead-brand">Recept.&nbsp&nbsp <small>Wijzig een bestaand recept.</small></h3>
			<% end %>

			<%= simple_form_for @recept ,:html => { :class => "form-horizontal", :role => "form", multipart: true } do |f| %>
				<div class="invulformulier">
					<div class="row">
						<div class="form-group">
					  		<%= f.label :naam, "Naam recept", class: "col-sm-2 control-label" %>
							<div class="col-sm-7">
								<%= f.text_field :naam, class: "form-control input-sm" %>
							</div>
					  	</div>
						<div class="form-group">
							<%= f.label  :bron, "Bron" ,class: "col-sm-2 control-label" %>
							<div class="col-sm-3">
						  		<%= f.select(:bron, Recept::BRON.sort!, {:include_blank => true}, {class: "form-control input-sm"}) %>
							</div>
					  	</div>
						<div class="form-group">
						  	<%= f.label  :soort, "Soort gerecht"  ,class: "col-sm-2 control-label" %>
							<div class="col-sm-3">
								<%= f.select(:soort, Recept::SOORT.sort!, {:include_blank => true}, {class: "form-control input-sm"}) %>
							</div>
					    </div>
					  	<div class="form-group">
							<%= f.label :bereidingstijd, "Bereidingstijd (min)" , class: "col-sm-2 control-label" %>
							<div class="col-sm-2">
						  		<%= f.text_field :bereidingstijd, class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :moeilijkheidsgraad, "Moeilijkheid 1-10" , class: "col-sm-2 control-label" %>
							<div class="col-sm-2">
								<%= f.text_field :moeilijkheidsgraad, class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :personen, "Aantal personen" , class: "col-sm-2 control-label" %>
							<div class="col-sm-2">
						  		<%= f.text_field :personen, class: "form-control input-sm" %>
							</div>
					  	</div>
					  	<div class="form-group">
							<%= f.label :ingredient, "Ingrediëntenlijst", class: "col-sm-2 control-label" %>
							<div class="col-sm-4">
								<%= f.text_area :ingredient, size: "24x18", :autofocus => true, class: "form-control input-sm" %>
							</div>
						</div>
					  	<div class="form-group">
							<%= f.label :werkwijze, class: "col-sm-2 control-label" %>
							<div class="col-sm-9">
								<%= f.text_area :werkwijze, size: "48x16", :autofocus => true, class: "form-control input-sm" %>
							</div>
					  	</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<h3>Ingrediënten<span><small>&nbsp&nbsp(alles in kleine letters)</small></span></h3>
							<div id="ingredients">
								<%= f.simple_fields_for :ingredienten do |ingredient| %>
									<%= render 'ingredient_fields', f: ingredient %>
								<% end %>
								<div class="links">
									<%= link_to_add_association 'Voeg ingrediënt toe', f, :ingredienten, class: "btn btn-primary add-button" %>
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<h3>Werkwijze<span><small>&nbsp&nbsp(alles in kleine letters)</small></span></h3>
							<div id="directions">
								<%= f.simple_fields_for :werkwijzen do |werkwijze| %>
									<%= render 'werkwijze_fields', f: werkwijze %>
								<% end %>
								<div class="links">
									<%= link_to_add_association 'Voeg stap toe', f, :werkwijzen, class: "btn btn-primary add-button" %>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<%= f.submit "Bevestig", class: "btn btn-primary" %>
					</div>
			  	</div>
			<% end %>
		</div>
		<%= render 'recepten/menu' %>
	</div>
</div>