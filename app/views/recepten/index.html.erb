<br>
<div class="panel panel-info">
  <div class="panel-heading">
	  <h3 class="panel-title">Recepten : <%= @filter %></h3>
  </div>
  <div class="panel-body">
    <div class="row">
		
		<%= form_tag recepten_path, method: 'get', html: {role: "form"} do %>
  <p align="center">
	  <%= text_field_tag :zoek, params[:zoek] %>
    <%= submit_tag "Filter", :name => nil, class: "btn btn-sm btn-info" %>
	  <%= link_to "Toon alles", recepten_path, {class: "btn btn-sm btn-link"} %>
  </p>
<% end %>
		
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Naam</th>
      <th>Bron</th>
      <th>Soort</th>
      <th>Datum</th>
      <th></th>
      <th></th>
	  <th></th>
    </tr>
  </thead>

  <tbody>
	  <% @recepten.each do |recept| %>
      <tr>
		  <td><%= recept.naam %></td>
		  <td><%= recept.bron %></td>
		  <td><%= recept.soort %></td>
		  <td><%= recept.created_at.strftime("%d/%m/%Y") %></td>
		<td width=50px><div class="btn-group">
			<%= link_to  edit_recept_path(recept), :class => "btn-xs btn-info" do %>
            <span class="glyphicon glyphicon-edit" title="Wijzig dit recept"></span>
            <% end %>
		</div></td>
        <td width=50px><div class="btn-group">
			<%= link_to  recept, method: :delete, data: { confirm: 'Bent u zeker?' }, :class => "btn-xs btn-info" do %>
            <span class="glyphicon glyphicon-remove-sign" title="Verwijder dit recept"></span>
            <% end %>
		</div></td>  
        <td width=50px><div class="btn-group">
			<%= link_to  "", method: :get, :class => "btn-xs btn-info" do %>
            <span class="glyphicon glyphicon-cutlery" title="Beoordelingen"></span>
            <% end %>
		</div></td>  		  
    </tr>
    <% end %>
  </tbody>
</table>
		
		<p align="center"><%= link_to 'Toevoegen', new_recept_path, {class: "btn btn-sm btn-info"} %></p>
</div>