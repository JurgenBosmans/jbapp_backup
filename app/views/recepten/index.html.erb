<div class="container">
	<div class="row row-offcanvas row-offcanvas-right">
		<div class="col-xs-12 col-sm-8">
          	<p class="pull-right visible-xs">
            	<button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
          	</p>
			<h3 class="masthead-brand">Recepten.&nbsp&nbsp <small>Beheer je recepten, beoordelingen, tips,...</small></h3>
			<div class="row">
				<%= render 'layouts/messages' %>
				<div class="zoekformulier">
					Zoek naar een recept<br>
					<%= form_tag recepten_path, method: 'get', html: {role: "form"} do %>
  						<%= text_field_tag :zoek, params[:zoek], :size => 30 %>&nbsp&nbsp
						<%= submit_tag "Zoek", :name => nil, class: "btn btn-sm btn-primary" %>
	  					<%= link_to "Toon alles", recepten_path, {class: "btn btn-sm btn-link"} %>
					<% end %>
				</div>
				<table class="table">
					<thead>
						<tr>
					  		<th></th>
							<th></th>
							<th></th>
					  		<th>Naam</th>
					  		<th>Bron</th>
					  		<th>Soort</th>
					  		<th>Datum</th>
					  		<th></th>
					  		<th></th>
							<th></th>
						</tr>
					</thead>
				  	<tbody>
						<% @recepten.each do |recept| %>
					  		<tr>
								<% if recept.ingredienten.blank? %>
									<td></td>
								<% else %>
									<td><i class="icon-shopping-cart"></i></td>
								<% end %>
								<% if recept.werkwijzen.blank? %>
									<td></td>
								<% else %>
									<td><i class="icon-cog"></i></td>
								<% end %>
					  			<td><i class="fa fa-thumbs-o-up"></i></td>
						  		<td><%= recept.naam %></td>
						  		<td><%= recept.bron %></td>
						  		<td><%= recept.soort %></td>
						  		<td><%= recept.created_at.strftime("%d/%m/%Y") %></td>
								<td width=50px>
									<div class="btn-group">
										<%= link_to  edit_recept_path(recept), :class => "btn-sm btn-primary" do %>
											<span class="glyphicon glyphicon-edit" title="Wijzig dit recept"></span>
										<% end %>
									</div>
								</td>
								<td width=50px>
									<div class="btn-group">
										<%= link_to  recept, method: :delete, data: { confirm: 'Bent u zeker?' }, :class => "btn-sm btn-primary" do %>
											<span class="glyphicon glyphicon-remove-sign" title="Verwijder dit recept"></span>
										<% end %>
									</div>
								</td>
								<td width=50px>
									<div class="btn-group">
						  				<%= link_to  recept_bereidingen_path(recept), method: :get, :class => "btn-sm btn-primary" do %>
											<span class="glyphicon glyphicon-comment" title="Beoordelingen"></span>
										<% end %>
									</div>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
		<%= render 'recepten/menu' %>
	</div>
</div>