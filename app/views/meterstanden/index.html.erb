<br>
<div class="panel panel-info">
  <div class="panel-heading">
	  <h3 class="panel-title">Meterstand : <%= @filter %></h3>
  </div>
  <div class="panel-body">
    <div class="row">
		
		
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Meter</th>
      <th>Datum</th>
      <th>Meterstand</th>
      <th>Verbruik</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
	  <% @meterstanden.each do |meterstand| %>
      <tr>
		  <td><%= meterstand.meter %></td>
		  <td><%= meterstand.datum.try(:strftime, "%d/%m/%Y") %></td>
		  <td align="right"><%= meterstand.stand %></td>
		  <td align="right"><%= meterstand.verbruik %></td>
		<td width=50px><div class="btn-group">
			<%= link_to  edit_meterstand_path(meterstand), :class => "btn-xs btn-info" do %>
            <span class="glyphicon glyphicon-edit" title="Wijzig deze meterstand"></span>
            <% end %>
		</div></td>
        <td width=50px><div class="btn-group">
			<%= link_to  meterstand, method: :delete, data: { confirm: 'Bent u zeker?' }, :class => "btn-xs btn-info" do %>
            <span class="glyphicon glyphicon-remove-sign" title="Verwijder deze aankoop"></span>
            <% end %>
		</div></td>  		
    </tr>
    <% end %>
  </tbody>
</table>
		
		<p align="center"><%= link_to 'Toevoegen', new_meterstand_path, {class: "btn btn-sm btn-info"} %></p>
</div>


