<% title("Log in") %>
<div class="site-wrapper">
	<div class="site-wrapper-inner">
    	<div class="cover-container">
        	<div class="masthead clearfix">
            	<div class="inner">
              		<h3 class="masthead-brand">JBapp</h3>
					<nav>
                		<ul class="nav masthead-nav">
               				<li><%= link_to "Home", home_path %></li>
							<li><%= link_to "About", about_path %></li>
               				<% if !user_signed_in? %>
								<li class="active"><a href="#">Log in</a></li>
               				<% else %>
                  				<li><%= link_to "Dashboard", inside_path %></li>
								<li><%= link_to "Afmelden (#{current_user.username})", destroy_user_session_path, data:{method: :delete} %></li>
								<li><%= link_to "Profiel", edit_user_registration_path %></li>
								<% if current_user.admin? %>
  									<li>
										<%= link_to  admin_root_path do %>
        									<span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
        								<% end %>
									</li>
								<% end %>
                  			<% end %>
                		</ul>
              		</nav>
            	</div>
          	</div>
			<h1>Log in</h1>
				<div class="container">
				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), role: "form", :html => {:class => 'form-horizontal'}) do |f| %>
      				<div class="form-group">
						<%= f.label :username, 'Gebruikersnaam' %>
        				<div class="row">
          					<div class="col-sm-2">
            					<%= f.text_field :username, :autofocus => true, class: "form-control" %>  
          					</div>
        				</div>
      				</div>
      				<div class="form-group">
        				<%= f.label :password, 'Paswoord' %>
        				<div class="row">
          					<div class="col-sm-2">
            					<%= f.password_field :password, class: "form-control" %>
          					</div>
        				</div>
      				</div>
      				<% if devise_mapping.rememberable? -%>
      					<div class="checkbox">
          					<%= f.check_box :remember_me %> <%= f.label :remember_me ,'mij onthouden'%>
      					</div>
      				<% end -%>
					<br>
      				<div class="form-group">
        				<div class="col-sm-2">
          					<%= f.submit "Log in", class: "btn btn-primary" %>
        				</div>
      				</div>
      			<% end %>
				</div>
			<%= render "devise/shared/links" %>
			<br><br><br><br><br><br><br><br><br><br>
			<div class="mastfoot">
    			<div class="inner">
        			<p align="center">Gemaakt door Jurgen Bosmans <a href="http://www.2004.be">2004.be</a>, &copy; 2015.</p>
        		</div>
    		</div>
		</div>
	</div>
</div>


