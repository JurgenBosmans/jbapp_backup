<%= form_for @prestatie ,:html => { :class => "form-horizontal", :role => "form"} do |f| %>

<h3>Algemene gegevens<small></small></h3>

<div class="form-group">
	  <%= f.label :datum, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
		<%= f.date_select(:datum, {class: "date-select"}) %>  
    </div>
  </div>

<div class="form-group">
	<%= f.label  :persoon_id , "Persoon" ,class: "col-sm-2 control-label" %>   
    <div class="col-sm-2">
		<%= f.collection_select(:persoon_id, current_user.personen.reorder("naam ASC"), :id, :voornaam, {:include_blank => true}, { class: "form-control input-sm"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :soort_prestatie_id, "Welke prestatie" , class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
		<%= f.collection_select(:soort_prestatie_id, current_user.soort_prestaties.reorder("soort ASC"), :id, :soort_en_detail , {:include_blank => true}, { class: "form-control input-sm"}) %>
		    </div>
  </div>
    
  <div class="form-group">
    <%= f.label :prestaite, "Doel of uitdaging" , class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
		<%= f.text_field :prestatie, class: "form-control input-sm" %>  
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :resultaat , class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
		<%= f.text_field :resultaat, class: "form-control input-sm" %>  
    </div>
  </div>

  <div class="form-group">
	  <%= f.label :opmerking, class: "col-sm-2 control-label" %>
    <div class="col-sm-5">
		<%= f.text_area :opmerking, size: "24x10", :autofocus => true, class: "form-control input-sm" %>  
    </div>
  </div>


<h3>Sportgegevens<small> (optioneel aan te vullen)</small></h3>

