<% title("Prestaties") %>
<div class="container">	<!-- container-fluid is ook mogelijk over de ganse breedte -->
	<div class="row">
		<div class="col-md-9"><!-- Main -->
			<div class="row">
				<h3 class="masthead-brand">Prestaties&nbsp&nbsp&nbsp<small>>> beheer hier al je prestaties</small></h3>
			</div>

			<!-- Dit zijn de alert messages -->
			<div class="row">
				<div class="col-md-6 col-md-offset-3"> <!-- Main -->
					<%= render 'layouts/messages' %>
				</div>
			</div>

			<!-- De tabel -->
			<div class="row">
				<table class="table table-condensed">
					<thead class="tabel-titel">
						<tr>
							<th>Datum</th>
						  	<th>Persoon</th>
						  	<th>Soort</th>
						  	<th></th>
						  	<th>Tijd</th>
						  	<th>Afstand</th>
						  	<th>AVG LAP</th>
						  	<th>BEST LAP</th>
						  	<th style="text-align:right">HR AVG</th>
						  	<th style="text-align:right">HR MAX</th>
						  	<th style="text-align:right">CAL</th>
						  	<th style="text-align:right">KG</th>
						  	<th></th>
						  	<th></th>
						</tr>
					</thead>
					<tbody>
						<% @prestaties.each do |prestatie| %>
							<tr>
								<td><%= prestatie.datum.strftime("%d/%m/%Y") %></td>
							  	<td><%= prestatie.persoon.voornaam %></td>
								<td><%= prestatie.soort_prestatie.soort %></td>
								<td><%= prestatie.soort_prestatie.soort_detail %></td>
							  	<td><%= prestatie.tijd %></td>
							  	<td><%= prestatie.afstand %></td>
								<td><%= prestatie.avg_lap %></td>
								<td><%= prestatie.best_lap %></td>
								<td align="right"><%= prestatie.hr_avg %></td>
								<td align="right"><%= prestatie.hr %></td>
								<td align="right"><%= prestatie.cal %></td>
								<td align="right"><%= prestatie.gewicht %></td>
								<td width=50px align="center">
									<div class="btn-group">
										<%= link_to  edit_prestatie_path(prestatie) do %>
											<span class="glyphicon glyphicon-edit" title="Wijzig deze prestatie"></span>
										<% end %>
									</div>
								</td>
								<td width=50px align="center">
									<div class="btn-group">
										<%= link_to prestatie, method: :delete, data: { confirm: 'Bent u zeker?' } do %>
											<span class="glyphicon glyphicon-trash" title="Verwijder deze prestatie"></span>
										<% end %>
									</div>
								</td>
							</tr>
						<% end %>
					  </tbody>
			</table>
			</div>
		</div>

		<!-- Menu -->
		<%= render 'prestaties/menu' %>
	</div>
</div>
