<br>
<div class="panel panel-info">
  <div class="panel-heading">
	  <h3 class="panel-title">Websites : <%= @filter %></h3>
  </div>
  <div class="panel-body">
    <div class="row">

		<%= form_tag @website, method: 'get', html: {role: "form"} do %>
  	<p align="center">
		<%= text_field_tag :zoek, params[:zoek], :size => 50 %>
		<%= submit_tag "Filter websites", :name => nil, class: "btn btn-sm btn-info" %>
		<%= link_to "Toon alles", websites_path, {class: "btn btn-sm btn-link"} %>
		</p><br>
<% end %>			
		
<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Website</th>
      <th>Aantal<br>bezoeken</th>
      <th>Laatst<br>bezocht</th>
      <th>Categorie</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
	<% @websites.each do |website| %>
		<% case  %>
	  		<% when website.count < 2 %>
      			<tr class="danger">
			<% when website.count > 50 %>
		  		<tr class="success">
		  	<% else %>
		  		<tr>
		<% end %>
		<td><%= link_to website.sitenaam, websites_path(:teller => website.id, :url => website.url) %></td>
        <td width=100px><%= website.count %></td>
        <td width=125px><%= website.laatste_bezoek.try(:strftime, "%d/%m/%Y") %></td>
        <td width=125px><%= website.categorie.omschrijving unless website.categorie_id.nil? %></td>
		<td width=50px><div class="btn-group">
			<%= link_to  edit_website_path(website), :class => "btn-xs btn-info" do %>
            <span class="glyphicon glyphicon-edit" title="Wijzig deze website"></span>
            <% end %>
		</div></td>
        <td width=50px><div class="btn-group">
			<%= link_to  website, method: :delete, data: { confirm: 'Bent u zeker?' }, :class => "btn-xs btn-info" do %>
            <span class="glyphicon glyphicon-remove-sign" title="Verwijder deze website"></span>
            <% end %>
		</div></td>  		
    </tr>
    <% end %>
  </tbody>
</table>
		
		<p align="center"><%= link_to 'Toevoegen', new_website_path, {class: "btn btn-sm btn-info"} %></p>
</div>