<div class="row">
  <div class="col-sm-6">
    
    <%= form_for(@website) do |f| %>
    
    <div class="form-group">
      <%= f.label :sitenaam %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :sitenaam, :autofocus => true, class: "form-control" %>  
        </div>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :url %>
      <div class="row">
        <div class="col-sm-6">      
          <%= f.url_field :url, class: "form-control" %>  
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :categorie %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.collection_select :categorie_id, Categorie.all, :id, :omschrijving, {:include_blank => '...'}, {:class => 'form-control'} %>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-6">
        <%= f.submit "Update Website", class: "btn btn-danger" %>
      </div>
    </div>    
  
    <% end %>
  </div>
</div>




